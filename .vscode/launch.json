    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/browser/src",
        },
        {
            "name": "Attach to Docker Node CLI",
            "type": "node",
            "request": "attach",
            "port": 3000,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}/cli",
            "remoteRoot": "/workspace/cli",
            "preLaunchTask": "Debug node.js application",
        },
        {
            "name": "Attach to Docker Node websocket bridge",
            "type": "node",
            "request": "attach",
            "port": 3000,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}/websocket_bridge"
        }
    ]
}